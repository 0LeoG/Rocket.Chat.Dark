.rc-old .page-settings .section,
.rc-old .page-container table
	background-color component-bg

.rc-old .page-settings .section
	border none

.rc-old .page-container table
	margin-top 10px

	.admin-table-row, th
		background-color transparent

	th, td
		border none

	tr:hover
		th
			background-color mix(component-bg, highlight-color, 40%)
		td
			background-color mix(component-bg, highlight-color, 20%)

	thead
		th, td
			background-color transparent !important

:root:root
	--flex-nav-background sidebar-bg
	--sidebar-background-light sidebar-bg
	--sidebar-background-light-hover darken(sidebar-bg, 15%)

.sidebar-light .sidebar-item
	color sidebar-fg

.sidebar-flex__search .rc-input__element
	background-color darken(sidebar-bg, 20%)
	color input-fg

.page-list a, .page-settings a
	color anchor-fg

	&:hover
		color darken(anchor-fg, 10%)

// Borders between input sections.
.rc-old .page-settings .section-content .input-line
	border-color lighten(component-bg, 10%)

.rc-old .fixed-title,
.rc-old .page-list .results
	border-color border-color

// Warnings like the 2FA warning.
.pending-background
	background-color transparent
	border none

.rc-old .page-static .content .section .section-content
	background-color component-bg

.rc-button
	border none

// Slider.
.range-slider-range
	background-color mix(#fff, component-bg, 6%)
	border-color mix(#fff, component-bg, 6%)

	&::-webkit-slider-thumb
		background-color highlight-color

		&:hover, &:active
			background-color darken(highlight-color, 10%)

	&::-moz-range-thumb
		background-color highlight-color

		&:hover, &:active
			background-color darken(highlight-color, 10%)

.range-slider-value
	background-color highlight-color

	&:after
		border-right-color highlight-color

